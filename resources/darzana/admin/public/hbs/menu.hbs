<div class="panel panel-default">
  <div class="panel-heading">
    <h4>{{t "messages/manage-components"}}</h4>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="alert alert-dismissable"> 
          {{t "labels/current-workspace"}}: <span class="text-workspace" data-in-effect="bounce">{{current.name}}</span>
          {{#if-neq current.name default.name}}
            <button type="button" class="btn btn-merge">
              <i class="fa fa-code-fork"></i>
              Merge workspace
            </button>
          {{/if-neq}}
          <span class="label label-merge-status"></span>
        </div>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="clone-url-box input-group pull-right">
          <span class="input-group-addon">HTTP</span>
          <input type="text" class="form-control" readonly="readonly" value="{{cloneUrl}}"/>
        </div>
      </div>
    </div>
    
    <div class="select-container">
      <div class="select-content">
        <form class="form-inline">
          <select name="workspace" class="form-control">
            {{#each workspaces}}
              <option value="{{name}}" {{selected ../workspace name}}>{{name}}</option>
            {{/each}}
          </select>
        </form>
      </div>
    </div>
    <div class="pull-right container-btn">
      <a class="fa-stack btn-active" data-toggle="tooltip" data-title="Activate this workspace!">
        <i class="fa fa-circle-o fa-stack-2x"></i>
        <i class="fa fa-rocket fa-stack-1x"></i>
      </a>
      <a class="fa-stack btn-add" data-toggle="tooltip" title="Add new workspace">
        <i class="fa fa-circle-o fa-stack-2x"></i>
        <i class="fa fa-plus fa-stack-1x"></i>
      </a>
      {{#if-neq current.name default.name}}
      <a class="fa-stack btn-delete" data-toggle="tooltip" title="Delete this workspace!">
        <i class="fa fa-circle-o fa-stack-2x"></i>
        <i class="fa fa-minus fa-stack-1x"></i>
      </a>
      {{/if-neq}}
    </div>
  </div>
  <ul class="list-group">
    <li class="list-group-item"><a href="#{{workspace}}/route">Router</a></li>
    <li class="list-group-item"><a href="#{{workspace}}/template">Template</a></li>
    <li class="list-group-item"><a href="#{{workspace}}/api">API</a></li>
  </ul>
</div>
