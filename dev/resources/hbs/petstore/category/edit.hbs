{{#partial "content"}}
<h2>Edit Category</h2>
<form action="/category/{{category.id}}" method="POST" class="form">
  <fieldset class="form-group">
    <input type="hidden" name="category[id]" value="{{category.id}}"/>
    <label for="name">Name</label>
    <input id="name" name="category[name]" type="text" placeholder="name" class="form-control" value="{{category.name}}"/>
  </fieldset>
  <button class="btn btn-primary" type="submit">Save</button>
</form>
{{/partial}}
{{> petstore/layout}}
